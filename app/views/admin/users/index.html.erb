<h1>Admin page for all users</h1>

<div class="btn-group top-buffer"><%= link_to "Add a new user", new_admin_user_path, class: "btn btn-primary" %>
</div>

<div><%= paginate @users, theme: 'twitter-bootstrap-3' %></div>

<table class="table">
  <thead class="thead">
    <tr>
      <td>Name</td>
      <td>Email</td>
      <td>Edit</td>
      <td>Delete</td>
    </tr>
  </thead>
  <% @users.each do |user| %>
  <tr>
    <td><%= link_to user.full_name, admin_user_path(user) %></td>
    <td><%= user.email %></td>
    <td><%= link_to "Edit", edit_admin_user_path(user) %></td>
    <td><%= link_to "Delete", admin_user_path(user), method: :delete, :"data-confirm" => "You sure?" %></td>
  </tr>
  <% end %>
</table>
