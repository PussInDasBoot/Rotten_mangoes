<h1><%= @movie.title %></h1>
<figure>
<%= image_tag @movie.poster.resize.url if @movie.poster? %>
</figure>
<%=render partial: "movie", locals: {movie: @movie} %>

<%=link_to "Edit", edit_movie_path %><br>

<%=link_to "Back to all movies", movies_path %>

<h3>Review for <%=@movie.title%> </h3>
<% if current_user %>
  <% @movie.reviews.each do |review| %>
    <p><%= review.text %></p>
    <p><%= review.rating_out_of_ten %> </p>
    <small>- <%= review.user.full_name %></small><br/>
  <% end %>
<p><%= link_to "Write a new review", new_movie_review_path(@movie)%></p>
  <% else %>
    <p>Please <%=link_to "Log in", new_session_path %> to see and submit reviews </p>
  <% end %>
<p>Review average: <%=@movie.review_average %> </p>