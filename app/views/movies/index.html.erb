<h1>Rotten Mangoes</h1>

<%= form_tag('/movies', method: "get") do %>
  <%= label_tag(:title, "Search by Title:") %>
  <%= text_field_tag(:title) %>
  <%= label_tag(:director, "Search by Director:") %>
  <%= text_field_tag(:director) %>
  <%= label_tag(:duration, "Search by Duration:") %>
  <%= select_tag(:duration, options_for_select([['', 1], ['Under 90 minutes', 2], ['Between 90 and 120 minutes', 3], ['Over 120 minutes', 4]])) %>
  <%= submit_tag "Search", name: nil %>
<% end %>

<% @movies.each do |movie| %>
  <figure>
  <%= link_to image_tag(movie.poster_url), movie_path(movie) %>
  </figure>
  <h2><%= movie.title %></h2>
  <h3><%= movie.director %> </h3>
  <h4><%= formatted_date(movie.release_date) %> </h4>
  <h4>Length: <%= movie.runtime_in_minutes %> minutes </h4>
  <p><%= movie.description %></p>
<% end %>

