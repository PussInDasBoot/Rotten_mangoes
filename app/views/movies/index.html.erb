<div class="row">
  <div class="col-sm-12">
    <h1 class="text-center">Rotten Mangoes</h1>
  </div>
</div>
<div class="row top-buffer">
  <div class="col-sm-12">
    <div class="form-inline text-center">
      <div class="form-group">
      <%= form_tag('/movies', method: "get") do %>
        <%= label_tag(:title, "Search by Title:") %>
        <%= text_field_tag(:title, nil, class: 'form-control') %>
      </div>
      <div class="form-group">
        <%= label_tag(:director, "Search by Director:") %>
        <%= text_field_tag(:director, nil, class: 'form-control') %>
      </div>
      <div class="form-group">
        <%= label_tag(:duration, "Minimum:") %>
        <%= select_tag(:duration, options_for_select([['', 1], ['Under 90 minutes', 2], ['Between 90 and 120 minutes', 3], ['Over 120 minutes', 4]]), class: 'form-control') %>
      </div>
        <%= submit_tag "Search", name: nil, class: 'btn btn-primary'%>
      <% end %>
    </div>
  </div>
</div>
<div class="row top-buffer">
  <div class="col-sm-12 text-center">
    <div class="btn-group">
    <%= link_to "Add a new movie", new_movie_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
<div class="row top-buffer">
  <section class="text-center">
    <% @movies.each_slice(2) do |slice| %>
    <div class="col-sm-12">
      <% slice.each do |movie| %>
      <div class="col-sm-6">
        <figure>
        <%= link_to image_tag(movie.poster.resize.url, class: 'img-rounded image-height'), movie_path(movie) %>
        </figure>
        <h2><%= movie.title %></h2>
        <%=render partial: "movie", locals: {movie: movie} %>
      </div>
      <% end %>
    </div>
    <% end %>
  </section>
</div>


      
